<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <EditText
        android:id="@+id/base_edit"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:textColor="#00000000"
        android:textSize="30sp"
        android:textStyle="bold">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y34"
        android:background="@drawable/bg"
        android:gravity="center"
        android:text="幼儿园智能云考勤晨检系统"
        android:textColor="#FFF"
        android:textSize="@dimen/y12" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x220"
        android:background="#000"
        android:paddingBottom="@dimen/x20"
        android:paddingTop="@dimen/x20"
        >

        <VideoView
            android:id="@+id/buffer"
            android:layout_width="@dimen/x300"
            android:layout_height="@dimen/x180"
            android:layout_gravity="center"
            android:layout_margin="25dp" />

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x10"
        android:layout_margin="@dimen/x5"
        android:background="@drawable/icon_sss">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <LinearLayout
                android:id="@+id/main_user_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/x10"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="宝宝信息"
                        android:textColor="#424242"
                        android:textSize="@dimen/x14" />

                    <TextView
                        android:id="@+id/main_user_info_bj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="班级：中二班"
                        android:textColor="#424242"
                        android:textSize="@dimen/x14"/>

                    <TextView
                        android:id="@+id/main_user_info_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="姓名：王小宝"
                        android:textColor="#424242"
                        android:textSize="@dimen/x14" />
                </LinearLayout>
                <FrameLayout
                    android:layout_width="@dimen/x100"
                    android:layout_height="@dimen/x140"
                    android:padding="5dp"
                    android:background="@drawable/icon_sss"
                    >
                    <ImageView
                        android:id="@+id/main_user_imge"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                </FrameLayout>


                <TextView
                    android:layout_width="@dimen/x100"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="学生照片"
                    android:textColor="#C7C7C7"
                    android:textSize="24sp" />
            </LinearLayout>
            <FrameLayout
                android:id="@+id/main_content2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/x20"
                >

            </FrameLayout>
            <LinearLayout
                android:id="@+id/main_qr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/min_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="08"
                        android:textColor="#339866"
                        android:textSize="@dimen/x32" />

                    <TextView
                        android:id="@+id/time_sta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textColor="#339866"
                        android:textSize="@dimen/x32" />

                    <TextView
                        android:id="@+id/ss_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50"
                        android:textColor="#339866"
                        android:textSize="@dimen/x32" />
                </LinearLayout>
                <TextView
                    android:id="@+id/main_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:textColor="#339866"
                    android:textSize="@dimen/x10" />
                <ImageView
                    android:id="@+id/qr_image"
                    android:layout_width="@dimen/x80"
                    android:layout_height="@dimen/x80"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/x20"
                    android:src="@drawable/erweima" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:layout_marginTop="@dimen/x20"
                    android:text="扫描关注微信二维码"
                    android:textColor="#339866"
                    android:textSize="@dimen/x10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:text="关注宝宝入离园信息"
                    android:textColor="#339866"
                    android:textSize="@dimen/x10" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/main_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

        </FrameLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/x10"
        android:textColor="#FFF"
        android:background="@drawable/bg"
        >

    </RelativeLayout>




</LinearLayout>
